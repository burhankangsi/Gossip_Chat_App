<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/img_icon"
        android:src="@drawable/ic_developer_board_black_24dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_login_title"
        android:text="Login"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

<com.rengwuxian.materialedittext.MaterialEditText
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/met_login_email"
    android:hint="Enter Email"
    android:inputType="textEmailAddress"
    android:textColor="#010203"
    app:met_textColorHint="#4e4e4e"
    app:met_textColor="#010203"
    app:met_singleLineEllipsis="true"
    app:met_primaryColor="@color/colorPrimaryDark"
    android:background="#ffffff"
    app:met_floatingLabel="highlight"
    app:met_floatingLabelText="Email"
    app:met_floatingLabelTextColor="#4d1c10"
    android:layout_marginTop="50dp"
    android:layout_gravity="center"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/met_login_pass"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#010203"
        app:met_textColorHint="#4e4e4e"
        app:met_textColor="#010203"
        app:met_singleLineEllipsis="true"
        app:met_primaryColor="@color/colorPrimaryDark"
        android:background="#ffffff"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Email"
        app:met_floatingLabelTextColor="#4d1c10"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btn_login_loginpage"
    android:text="Login"
    android:background="@color/colorPrimaryDark"
    android:textColor="#fade7d"
    android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_login_forgot_pass"
        android:text="Forgot Password"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_login_sign_up"
        android:text="Don't have an account? Sign Up"
        android:textColor="#cf1b41"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:clickable="true"
        />



</LinearLayout>
</ScrollView>